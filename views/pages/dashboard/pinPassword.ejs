  <body>
    <div class="dasboardContainer"><%- include('../../partials/header') %></div>
    <div class="bottomMainContainer">
      <div class="bottomtopSection">
        <div class="bottomtopTextSection">
          <p>Welcome</p>
          <p class="highlightText" id="hightlighttext"></p>
          <div class="bottomText">
            <p>
              Your Current Balance is
              <span class="highlightText bold" id="pin"></span>
            </p>
          </div>
        </div>
      </div>
      <div class="pinpasswordmain">
        <div class="pincontainer">
          <span
            style="text-align: center; padding-bottom: 20px; color: #990000"
            id="err-msg"
          ></span>
          <div class="headingtable">
            <button class="refreshbtn" id="change-pin-pass">
              Change Pin Password
            </button>
            <button class="refreshbtn" id="reset-pin-pass">
              Reset Member Id
            </button>
          </div>
          <div>
            <table class="table">
              <thead>
                <tr>
                  <th>Member Id</th>
                  <th>Required</th>
                  <th>Reset Status</th>
                </tr>
              </thead>
              <tbody id="pin-pass-list">
                <tr id="existing-row">
                  <td>
                    <select id="child-users">
                    </select>
                  </td>
                  <td>
                    <select id="select-option">
                      <option value="Need Pin">Need Pin</option>
                      <option value="Need Password">Need Password</option>
                      <option value="Need Both">Need Both</option>
                    </select>
                  </td>
                  <td>
                    <button class="refreshbtn" id="add-btn">Add Details</button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
