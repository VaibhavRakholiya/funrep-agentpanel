<script>
  $(document).ready(function () {
    const storedUser = JSON.parse(localStorage.getItem("user"));
    const hightlighttext = document.getElementById("hightlighttext");
    hightlighttext.textContent = storedUser?.name;
    const pin = document.getElementById("pin");
    pin.textContent = storedUser?.point_balance;

    const childUsers = document.getElementById("child-users");
    $.ajax({
      url: "get-my-users",
      method: "get",
      dataType: "json",
      contentType: "application/json",
      success: (response) => {
        console.log("response: ", response);
        let count = 2;
        $.each(response.data, function (index, data) {
          let option = document.createElement("option");
          option.text = data.username;
          option.value = data.username;
          childUsers.appendChild(option);
        });
      },
      error: (response) => {},
    });

    //list table
   // listTable();
    function listTable() {
      const tbody = $("#pin-pass-list"); // Using jQuery to get the tbody
      const existingRow = $("#existing-row"); // Using jQuery to get the existing row
      tbody.find("tr").not(existingRow).remove();
      $.ajax({
        url: "list-pin-pass",
        method: "POST",
        dataType: "json",
        contentType: "application/json",
        data: JSON.stringify({ gameType: "Roulette" }),
        success: (response) => {
          console.log("response: ", response);

          $.each(response.data, function (index, data) {
            // Create a new table row
            var newRow = $("<tr id='newRow'>");

            // Add table cells with user data
            newRow.append($("<td>").text(data.member_id));
            newRow.append($("<td>").text(data.required));
            newRow.append($("<td>").text(data.reset_status));

            // Insert the new row before the existing row using jQuery's before() method
            existingRow.before(newRow);
          });
        },
        error: (response) => {},
      });
    }

    //add details update-pin-passwpord
    $("#add-btn").click(function () {
      const member_id = document.getElementById("child-users").value;
      const required = document.getElementById("select-option").value;
      console.log("member_id: ", member_id, required);
      $.ajax({
        url: "update-pin-passwpord",
        method: "POST",
        dataType: "json",
        contentType: "application/json",
        data: JSON.stringify({ member_id, required }),
        success: (response) => {
          if (response) {
            console.log("response: ", response);
            listTable();
          }
        },
        error: (response) => {
          console.log("response: ", response);
        },
      });
    });

    //click on change pin pass
    $("#change-pin-pass").click(function () {
      $.ajax({
        url: "change-pin-pass",
        method: "POST",
        dataType: "json",
        contentType: "application/json",
        success: (response) => {
          if (response) {
            console.log("response: ", response);
            // Reset Pin Password Change Successfully.
            listTable();
          }
        },
        error: (response) => {
          console.log("response: ", response);
        },
      });
    });

    resetpin();

    //click on reset pin pass
    function resetpin()
    {
      $.ajax({
        url: "reset-pin-pass",
        method: "POST",
        dataType: "json",
        contentType: "application/json",
        success: (response) => {
          if (response) {
            console.log("response: ", response);
            const errMsg = document.getElementById("err-msg");
            errMsg.textContent = "Reset Pin Password Change Successfully.";
            setTimeout(() => {
              errMsg.textContent = "";
            }, 2000);
            listTable();
          }
        },
        error: (response) => {
          console.log("response: ", response);
        },
      });

    }
    $("#reset-pin-pass").click(resetpin);
  });
</script>
